<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cool2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:background="@drawable/back2"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="WLAN精灵"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解决手机WLAN耗电和热点覆盖的问题"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:text="手机上网智能化,在无法精准定位CMCC热点的情况下,系统会自动扫描监测用户所在区域CMCC热点,若存在热点则自动连接或通知提醒,使用户方便切换到可用的CMCC热点,体验高速、稳定的上网体验。"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffffff" />
    </LinearLayout>
 
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:src="@drawable/back_li" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.91"
            android:text="喜欢这个应用吗？分享给朋友吧"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffffff"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="分享" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:src="@drawable/back_li" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:gravity="center|center_vertical|fill|fill_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/check_power" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_gravity="center"
            android:layout_weight="1.01"
            android:text="调试开关"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffe2e2e2"
            android:textSize="20dip" />

        <CheckBox
            android:id="@+id/debug_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:gravity="center|center_vertical|fill|fill_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/check_power" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_gravity="center"
            android:layout_weight="1.01"
            android:text="调试铃声"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffe2e2e2"
            android:textSize="20dip" />

        <CheckBox
            android:id="@+id/debug_sound_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />
    </LinearLayout>

</LinearLayout>